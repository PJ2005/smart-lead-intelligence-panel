{
  "name": "lead-intelligence-panel",
  "version": "1.0.0",
  "description": "A comprehensive, modular B2B lead intelligence platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "start": "concurrently \"pnpm start:backend\" \"pnpm start:frontend\"",
    "start:backend": "pnpm --filter backend start",
    "start:frontend": "pnpm --filter frontend start",
    "test": "pnpm test:backend && pnpm test:frontend",
    "test:backend": "pnpm --filter backend test",
    "test:frontend": "pnpm --filter frontend test",
    "test:coverage": "pnpm test:backend:coverage && pnpm test:frontend:coverage",
    "test:backend:coverage": "pnpm --filter backend test:coverage",
    "test:frontend:coverage": "pnpm --filter frontend test:coverage",
    "lint": "pnpm lint:backend && pnpm lint:frontend",
    "lint:backend": "pnpm --filter backend lint",
    "lint:frontend": "pnpm --filter frontend lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "pnpm type-check:backend && pnpm type-check:frontend",
    "type-check:backend": "pnpm --filter backend type-check",
    "type-check:frontend": "pnpm --filter frontend type-check",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed",
    "db:reset": "pnpm --filter backend db:reset",
    "docker:up": "docker-compose -f docker/compose/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/compose/docker-compose.yml down",
    "docker:build": "docker-compose -f docker/compose/docker-compose.yml build",
    "docker:logs": "docker-compose -f docker/compose/docker-compose.yml logs -f",
    "clean": "pnpm clean:backend && pnpm clean:frontend",
    "clean:backend": "pnpm --filter backend clean",
    "clean:frontend": "pnpm --filter frontend clean",
    "install:all": "pnpm install && pnpm install:backend && pnpm install:frontend",
    "install:backend": "pnpm --filter backend install",
    "install:frontend": "pnpm --filter frontend install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "b2b",
    "lead-management",
    "analytics",
    "business-intelligence",
    "react",
    "nodejs",
    "typescript",
    "postgresql"
  ],
  "author": "Lead Intelligence Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/lead-intelligence-panel.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/lead-intelligence-panel/issues"
  },
  "homepage": "https://github.com/your-org/lead-intelligence-panel#readme"
} 